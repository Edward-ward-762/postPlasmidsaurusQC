process {
    withName: 'readsCount' {
        publishDir = [
            path: { "${params.outdir}" },
            mode: "$params.publish_dir_mode",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'MINIMAP2_ALIGN' {
        ext.args   = { "-ax map-ont" }
        publishDir = [
            path: { "${params.outdir}" },
            mode: "$params.publish_dir_mode",
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        maxForks = 3
    }

    withName: 'mapReads' {
        publishDir = [
            path: { "${params.outdir}" },
            mode: "$params.publish_dir_mode"
        ]
        maxForks = 3
    }

    withName: 'samIndex' {
        publishDir = [
            path: { "${params.outdir}" },
            mode: "$params.publish_dir_mode"
        ]
    }

    withName: 'bamCoverage' {
        container  = "docker.io/edwardward762/transgenemapping:latest"
        publishDir = [
            path: { "${params.outdir}" },
            mode: "$params.publish_dir_mode"
        ]
    }

    withName: 'collectReadCounts' {
        publishDir = [
            path: { "${params.outdir}" },
            mode: "$params.publish_dir_mode"
        ]
    }
}